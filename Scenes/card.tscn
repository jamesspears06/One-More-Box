[sub_resource type="GDScript" id="GDScript_wf8id"]
script/source = "extends Sprite2D

@export var object: PackedScene 
@onready var is_clicked = false
@onready var this_object
@onready var sprite: TextureRect = $TextureRect

@export var icon:Texture2D
const blutac = preload(\"res://Scenes/Objects/blutac.tscn\")

var starting_position


func _ready() -> void: 
	starting_position = position
	sprite.texture=icon

func _process(delta: float) -> void: if is_clicked: position = get_global_mouse_position()

func _on_button_mouse_entered() -> void: scale *= 1.2

func _on_button_mouse_exited() -> void: scale /=1.2

func _on_button_button_down() -> void:
	is_clicked = true
	scale *= 0.5

func _on_button_button_up() -> void:
	is_clicked = false
	visible = false
	scale /= 0.5
	position = starting_position
	this_object = object.instantiate()
	this_object.global_position = get_global_mouse_position()
	this_object.card = self
	get_parent().add_child(this_object)

func object_deleted(): visible = true
"

